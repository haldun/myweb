<h1>Listing pages</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Slug</th>
    <th>Author</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td><%= page.slug %></td>
    <td><%= page.author %></td>
    <td><%= truncate page.content, :words => 40 %></td>
    <td><%= link_to 'Show', [:admin, page] %></td>
    <td><%= link_to 'Edit', edit_admin_page_path(page) %></td>
    <td><%= link_to 'Destroy', [:admin, page], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

