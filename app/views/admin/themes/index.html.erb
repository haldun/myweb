<h1>Listing themes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Directory</th>
    <th>Published at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% themes.each do |theme| %>
  <tr>
    <td><%= theme.name %></td>
    <td><%= theme.description %></td>
    <td><%= theme.directory %></td>
    <td><%= theme.published_at %></td>
    <td><%= link_to 'Show', [:admin, theme] %></td>
    <td><%= link_to 'Edit', edit_admin_theme_path(theme) %></td>
    <td><%= link_to 'Destroy', [:admin, theme], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

