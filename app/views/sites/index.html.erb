<h1>Listing sites</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Tagline</th>
    <th>Owner</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% sites.each do |site| %>
  <tr>
    <td><%= site.name %></td>
    <td><%= site.title %></td>
    <td><%= site.tagline %></td>
    <td><%= site.owner %></td>
    <td><%= link_to 'Show', site %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

